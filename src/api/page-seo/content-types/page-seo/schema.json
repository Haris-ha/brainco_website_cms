{
  "kind": "collectionType",
  "collectionName": "page_seos",
  "info": {
    "singularName": "page-seo",
    "pluralName": "page-seos",
    "displayName": "Page SEO",
    "description": "Manage multi-language SEO configuration for all website pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "pageName": {
      "type": "string",
      "required": true,
      "unique": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "pagePath": {
      "type": "string",
      "required": true,
      "unique": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "locale": {
      "type": "enumeration",
      "enum": ["zh-Hans", "en", "zh-Hant"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60,
      "minLength": 10,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160,
      "minLength": 50,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "keywords": {
      "type": "text",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaRobots": {
      "type": "string",
      "default": "index,follow",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "canonicalURL": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ogTitle": {
      "type": "string",
      "required": false,
      "maxLength": 60,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ogDescription": {
      "type": "text",
      "required": false,
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "ogType": {
      "type": "enumeration",
      "enum": ["website", "article", "product"],
      "default": "website",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "twitterCard": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary_large_image",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "twitterTitle": {
      "type": "string",
      "required": false,
      "maxLength": 60,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "twitterDescription": {
      "type": "text",
      "required": false,
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "structuredData": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}

